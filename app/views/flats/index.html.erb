<div class="container py-4">
  <%# <div class="pb-4">
    <div class="subtitle"><h1>Nos hébergements</h1></div>
  </div>   %>

  <div class="content"> 
    <div class="cards">
      <% @flats.each do |flat| %>
        <%#= link_to flat do %>
          <div class="card-trip">  
            <%= image_tag 'photo.jpg' %>
            <div class="card-trip-infos">
              <div>
                <p><%= flat.address %></p>
                <h2 class="pb-2 mb-2 border-bottom"><%= link_to flat.name, trip_flat_path(trip_id: @trip.id, id: flat.id) %></h2>
                <p>label : <%= flat.label %></p>
                <p>pour <%= flat.capacity %> personnes</p>
              </div>
              <h2 class="card-trip-pricing"><%= flat.price %>€</h2>
              <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered"/>
            </div>
          </div> 
        <% end %> 
      <%# end %>
    </div>
    <div id="trip-box" style="width: 300px; height: 100vh;">
      <ul class="list-inline t-tabs-underlined nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="t-tab-underlined nav-link" id="map-tab" data-toggle="tab" href="#map" role="tab" aria-controls="map" aria-selected="true">Carte</a>
        </li>
        <li class="nav-item">
          <a class="t-tab-underlined nav-link active" id="trip-tab" data-toggle="tab" href="#trip" role="tab" aria-controls="trip" aria-selected="false">Voyage</a> 
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade"
          id="map"
          role="tabpanel"
          aria-labelledby="map-tab"
          style="width: 300px; height: 100vh;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>


        <div class="tab-pane fade show active" id="trip" role="tabpanel" aria-labelledby="trip-tab">
          <div>
            <h3>Restaurants</h3>
            <% unless @trip.restaurants.empty? %>
              <% @trip.restaurants.each do |restaurant| %>
                <p><%= restaurant.name %></p>
              <% end %>
            <% end %>
          </div>
          <div>
            <h3>Hébergements</h3>
            <% unless @trip.flats.empty? %>
              <% @trip.flats.each do |flat| %>
                <p><%= flat.name %></p>
              <% end %>
            <% end %>
          </div><div>
            <h3>Activités</h3>
            <% unless @trip.activities.empty? %>
              <% @trip.activities.each do |activity| %>
                <p><%= activity.name %></p>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      
    </div>  
  </div>
</div>

          
         


    