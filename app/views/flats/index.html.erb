<div class="container py-4">
  <div class="pb-4">
    <div class="subtitle"><h1>Nos hébergements</h1></div>
    <div class="subtitle"><h2 class="subtitle">Eco-responsables</h2></div>
    <br>
    <br>
  </div>
  <div class="content-cards">
    <div class="cards">
      <% @flats.each do |flat| %>
      <div class="card-trip">
        <div class="card-img">
          <%= image_tag 'photo.jpg', class:"card-img" %>
        </div>
        <div class="card-trip-infos">
          <div class="card-trip-text">
            <h2><%= link_to flat.name, trip_flat_path(trip_id: @trip.id, id: flat.id) %></h2>
            <p>label : <%= flat.label %></p>
            <p>pour <%= flat.capacity %> personnes</p>
          </div>
          <div class="card-trip-pricing">
            <h2><%= flat.price %>0€</h2>
            <img src="#" class="card-trip-user avatar-bordered"/>
          </div>
        </div>
      </div> 
      <% end %>
    </div>
    <div id="map"
      id="map"
      style="width: 500px; height: 100vh;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>