<div class="container py-4">
    <div class="content"> 
      <div class="cards">
        <% @flats.each do |flat| %>
        <%= link_to trip_flat_path(trip_id: @trip.id, id: flat.id) do %>
          <div class="card-trip">  
            <div class="card-trip">  
              <%= cl_image_tag flat.photos.first.key %>
              <div class="card-trip-infos">
              <div class='card-trip-text'>
                <p><%= flat.address %></p>
                <h2 class="pb-2 mb-2 border-bottom"><%= flat.name %></h2>
                <p>label : <%= flat.label %></p>
                <p>pour <%= flat.capacity %> personnes</p>
              </div>
              <h2 class="card-trip-pricing"><%= flat.price %>€</h2>
              <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered"/>
            </div>
          </div> 
        <% end %> 
        <% end %>
      </div>
    </div>
    <div class="cards">
      <% @restaurants.each do |restaurant| %>
      <%= link_to trip_restaurant_path(trip_id: @trip.id, id: restaurant.id) do %>
        <%#= link_to flat do %>
          <div class="card-trip">  
            <%= image_tag 'photo.jpg' %>
            <div class="card-trip-infos">>
                <div class='card-trip-text'>
                  <h2><%= restaurant.name %></h2>
                  <p><%= restaurant.price %>€</p>
                  <p><%= restaurant.description.truncate(30)%>
                </div>
              <img src="https://www.it-services.com.tn/wp-content/uploads/2017/04/avatar-2.png" class="card-trip-user avatar-bordered"/>
            </div>
          </div>
      <% end %> 
      <% end %>
    </div>
    <div class="cards">
      <% @activities.each do |activity| %>
        <%= link_to trip_activity_path(trip_id: @trip.id, id: activity.id) do %>
        <%#= link_to flat do %>
          <div class="card-trip">  
            <%= image_tag 'photo.jpg' %>
            <div class="card-trip-infos">>
                <div class='card-trip-text'>
                  <h2><%= activity.name %></h2>
              <p><%= activity.price %>€</p>
              <p><%= activity.description.truncate(30)%>
              <img src="https://www.it-services.com.tn/wp-content/uploads/2017/04/avatar-2.png" class="card-trip-user avatar-bordered"/>
              </div>
            </div>
          </div>
        <% end %> 
      <% end %>
    </div>
    <div id="trip-box" style="width: 300px; height: 100vh;">
      <ul class="list-inline t-tabs-underlined">
        <li>
          <%= link_to "Carte", trip_flats_path(@trip.id), class: "t-tab-underlined active" %>
        </li>
        <li>
          <%= link_to "Voyage", trip_restaurants_path(@trip.id), class: "t-tab-underlined" %>
        </li>
      </ul>
      <div id="map"
        style="width: 300px; height: 100vh;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>  
  </div>
</div>

          
         

    