<div class="container">
	<h1>Tous Mes voyages</h1>
	<ul>
		<% @trips.each do |trip| %>
			<li><%= link_to trip.name, trip_path(trip) %></li>
			<li><% if policy(trip).show? %>
			<%= link_to "Voir", trip_path(trip) %></li>
			<li><% if policy(trip).edit? %>
			<%= link_to "Updater", edit_trip_path(trip) %></li>
			<li><% if policy(trip).destroy? %>
			<%= link_to "Supprimer", trip_path(trip), method: :delete, data: {confirm: "Êtes-vous sûr?"} %></li>
		<% end %>
	</ul>
</div>