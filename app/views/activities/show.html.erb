<div class="container py-4">
  <%= link_to "retour", trip_activities_path(@trip) %>
	<h1><%= @activity.name %></h1>
	<p><%= @activity.address %></p>

  <div class="row">
    <div class="col-md-6">
      <%= image_tag 'photo.jpg', class:"w-100 h-100" %>
    </div>
    <div class="col-md-6">
      <div class="row row-cols-2 flex-wrap">
        <div class="col-md-6 p-1"><%= image_tag 'photo.jpg', class:"w-100 h-100" %></div>
        <div class="col-md-6 p-1"><%= image_tag 'photo.jpg', class:"w-100 h-100" %></div>
        <div class="col-md-6 p-1"><%= image_tag 'photo.jpg', class:"w-100 h-100" %></div>
        <div class="col-md-6 p-1"><%= image_tag 'photo.jpg', class:"w-100 h-100" %></div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <!-- activity card -->
      <div class="d-flex pt-4 pb-4 border-bottom">
        <div><%= image_tag "https://konsultan.online/wp-content/uploads/avatar-7.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %></div>
        <div class="pl-2"><p>Proposé par <%#= @activity.user.email.split("@").first %></p></div>
      </div>
      <div class="pt-4 pb-4 border-bottom">
        <p><%= @activity.description %></p>
        <%#= link_to "Retour aux hébergements", activities_path, class:"btn btn-secondary" %>
      </div>
    </div>
    <div class="col-md-4">
      <!-- Booking card -->
      <div id="form_booking">
        <div class="d-flex justify-content-between mt-2">
          <div class="important">
            <p><%= @activity.price %><span style="font-size: 16px">0€ par personne</span></p>
          </div>
        </div>
        <p><%= @activity.category %></p>
        <div>
          <%= simple_form_for [@activity, @booking_activity], url: activity_activities_bookings_path(@activity) do |f| %>
              <%= f.input :trip_id, as: :hidden, input_html:{value:@trip.id} %>
              <%= f.input :start_date, :as => :date, :order => [:day, :month, :year] %> 
            <%= f.button :submit, "Réserver", class: "btn btn-primary w-100" %>
          <% end %>
        </div>
        <div class="d-flex justify-content-between mt-3 border-bottom">
        </div>

        <div class="important">
          <div class="d-flex justify-content-between mt-3">
            <p><strong>Total</strong></p>
            <p><strong>200€</strong></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="reviews"> 
    <% @activity_reviews.each do |activity_review| %>
      <p>
        <%= activity_review.user.first_name %>
        <% activity_review.rating.times do %>
          <i class="fas fa-star"></i>
        <% end %>
        <% (5 - activity_review.rating).times do %>
          <i class="far fa-star"></i>
        <% end %>
      </p>
      <p><%= activity_review.content %></p>
    <% end %>
  </div>
  <% if @activityreservation %>
  <div class="review">
    <h2>Laissez une évaluation</h2>
    <%= simple_form_for @activity_review, url: activities_booking_activity_reviews_path(@activityreservation) do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: (1..5).to_a, label: "notez votre expérience" %>
      <div class="my-3">
        <% 5.times do |index| %>
          <i id="<%= index + 1 %>" class="review-rating far fa-star"></i>
        <% end %>
      </div>
      <%= f.submit class: "btn btn-primary", value: "Valider" %>
    <% end %>
  <% end %>
  </div>